doctype html
html
  head
    title= title
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', media='screen', href='/css/main.css') 
  body
    #wrap
      .navbar.navbar-default.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Midwest JS
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li(class= homeActive)
                a(href='/') Home
              li(class= speakersActive)
                a(href='/speakers') Speakers
              li(class= sponsorsActive)
                a(href='/sponsors') Sponsors
              li(class= ticketsActive)
                a(href='/tickets') Tickets
              li(class= contactActive)
                a(href='/contact') Contact
      .container
        block content
    #footer
      .container
        p.text-muted 
          &copy; 2014 Midwest JS -- Website by&nbsp;
          a(href='http://agileorbit.com') Agile Orbit
          &nbsp;--&nbsp;Hosted at 
          a(href='https://www.nodejitsu.com') Nodejitsu

